    runTach:runTach
    tempPointer:tempPointer
    fuelPointer:fuelPointer
    tachPointer:tachPointer


    GridLayout:
        cols: 1
        rows: 1
        size:root.width,root.height

        Widget:
            Button:
                id: runTach
                text: "Cycle Tach"
                pos: (20,600)
                on_press: root.doTach()
        Widget:
            Button:
                text: "Cycle Fuel"
                pos: (120,600)
                on_press: root.doFuel()

        Widget:
            canvas:
                Rectangle:
                    source: "images/arrow-left-green.png"
                    size: (48,48)
                    pos: (760,650)

        Widget:
            canvas:
                Rectangle:
                    source: "images/car-light-high-blue.png"
                    size: (48,48)
                    pos: (960,650)

        Widget:
            canvas:
                Rectangle:
                    source: "images/arrow-right-green.png"
                    size: (48,48)
                    pos: (1160,650)

        GridLayout:
            cols: 5
            rows: 3

            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/t.png"
                            size: (200,580)
                            pos: (0,0)

                Widget:
                    canvas:
                        Rectangle:
                            source: "images/car-battery-red.png"
                            size: (48,48)
                            pos: (50,500)

                Label:
                    text: "CHECK\nENGINE"
                    bold: True
                    pos: (70,370)
                    font_size: '25dp'
                    color: 1,153/255,0,1

                Widget:
                    canvas:
                        Rectangle:
                            source: "images/seatbelt-red.png"
                            size: (48,48)
                            pos: (50,300)

                Label:
                    text: " AIR\nBAG"
                    bold: True
                    pos: (65,170)
                    font_size: '25dp'
                    color: 1,153/255,0,1

            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/temp.png"
                            size: (300,300)
                            pos: (380,330)
                Widget:
                    id: tempPointer
                    origin: self.center
                    canvas:
                        Rectangle:
                            source: "images/pointer2-shad.png"
                            size: (300,300)
                            pos: (380,330)


                Widget:
                    canvas:
                        Rectangle:
                            source: "images/fuel.png"
                            size: (300,300)
                            pos: (200,20)
                Widget:
                    id: fuelPointer
                    origin: self.center
                    canvas:
                        Rectangle:
                            source: "images/pointer2-shad.png"
