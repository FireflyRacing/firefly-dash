                Widget:
                    id: tachPointer
                    origin: self.center
                    pos: (700,50)
                    canvas:
                        Rotate:
                            axis: (0,0,1)
                            origin: (990,340)
                            angle: 0
                        Rectangle:
                            source: "images/pointer2-shad.png"
                            size: (580,580)
                            pos: (700,50)
                Label:
                    text: "RPM"
                    bold: True
                    pos: (1230,240)
                    font_size: '30dp'
                    color: 1,0,0,1

                Label:
                    text: "X1000"
                    pos: (1230,210)
                    font_size: '20dp'
                Label:
                    text: "0"
                    pos: (980,280)
                    font_name: 'DSEG7Classic'
                    font_size: '70dp'
                Label:
                    text: "MPH"
                    pos: (980,220)
                    font_size: '30dp'
                Label:
                    text: "000000.0 mi"
                    pos: (1180,80)
                    font_size: '20dp'


            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/volts-flip.png"
                            size: (300,300)
                            pos: (1300,330)
                Widget:
                    id: voltsPointer
                    origin: self.center
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: -300
                            origin: (1450, 480)
                    canvas.after:
                        PopMatrix
                    canvas:
                        Rectangle:
                            source: "images/pointer2-shad.png"
                            size: (300,300)
                            pos: (1300,330)

                Widget:
                    canvas:
                        Rectangle:
                            source: "images/oil.png"
                            size: (300,300)
                            pos: (1380,20)
                Widget:
                    id: voltsPointer
                    origin: self.center
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: -300
                            origin: (1530, 170)
                    canvas.after:
                        PopMatrix
                    canvas:
                        Rectangle:
                            source: "images/pointer2-shad.png"
                            size: (300,300)
                            pos: (1380,20)



            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/t.png"
