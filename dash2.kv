<Dash2Layout>:
#    cols: 1
#    rows: 1
#    AnchorLayout:
#    size:root.width,root.height
#    top: self.height



    tempPointer:tempPointer
    fuelPointer:fuelPointer
    tachPointer:tachPointer
    voltsPointer:voltsPointer
    oilPointer:oilPointer
    leftArrow:leftArrow
    bright:bright
    rightArrow:rightArrow
    battery:battery
    checkEngine:checkEngine
    seatBelt:seatBelt
    airBag:airBag
    parking:parking
    coolant:coolant
    lowOil:lowOil
    shift:shift

    GridLayout:
        cols: 1
        rows: 1
        size:root.width,root.height

        Widget:
            id: shift
            opacity: 1.0
            canvas.before:
                Color:
                    rgba: 1,0,0,0
            canvas:
                Rectangle:
                    size: (1920, 720)
                    pos: (0,0)

        Widget:
            id: leftArrow
            opacity: 1.0
            canvas:
                Rectangle:
                    source: "images/arrow-left-green.png"
                    size: (48,48)
                    pos: (760,650)

        Widget:
            id: bright
            opacity: 0.0
            canvas:
                Rectangle:
                    source: "images/car-light-high-blue.png"
                    size: (48,48)
                    pos: (960,650)

        Widget:
            id: rightArrow
            opacity: 0.0
            canvas:
                Rectangle:
                    source: "images/arrow-right-green.png"
                    size: (48,48)
                    pos: (1160,650)

        GridLayout:
            cols: 5
            rows: 3

            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/t.png"
                            size: (200,580)
                            pos: (0,0)

                Widget:
                    id: battery
                    opacity: 0.0
                    canvas:
                        Rectangle:
                            source: "images/car-battery-red.png"
                            size: (48,48)
                            pos: (50,500)

                Label:
                    id: checkEngine
                    opacity: 0.0
                    text: "CHECK\nENGINE"
                    bold: True
                    pos: (70,370)
                    font_size: '25dp'
                    color: 1,153/255,0,1

                Widget:
                    id: seatBelt
                    opacity: 0.0
                    canvas:
                        Rectangle:
                            source: "images/seatbelt-red.png"
                            size: (48,48)
                            pos: (50,300)

                Label:
                    id: airBag
                    opacity: 0.0
                    text: " AIR\nBAG"
                    bold: True
                    pos: (65,170)
                    font_size: '25dp'
                    color: 1,153/255,0,1

            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/temp.png"
                            size: (300,300)
                            pos: (380,330)
                Widget:
                    id: tempPointer
                    origin: self.center
                    angle: 0
                    origin: (530,480)
                    canvas:
                        Rectangle:
                            source: "images/pointer2-shad.png"
                            size: (300,300)
                            pos: (380,330)


                Widget:
                    canvas:
                        Rectangle:
                            source: "images/fuel.png"
                            size: (300,300)
                            pos: (200,20)
                Widget:
                    id: fuelPointer
                    origin: self.center
                    angle: 0
                    origin: (350,170)
                    canvas:
                        Rectangle:
                            source: "images/pointer2-shad.png"
                            size: (300,300)
                            pos: (200,20)


            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/tach-dash2.png"
                            size: (580,580)
                            pos: (700,50)
                Widget:
                    id: tachPointer
                    origin: self.center
                    angle: 0
                    origin: (990,340)
                    canvas:
                        Rotate:
                            axis: (0,0,1)
                            origin: (990,340)
                            angle: 0
                        Rectangle:
                            source: "images/pointer2-shad.png"
                            size: (580,580)
                            pos: (700,50)

                Label:
                    id: rpm
                    text: "0"
                    pos: (980,300)
                    font_name: 'DSEG7Classic'
                    font_size: '40dp'

                Label:
                    id: odometer
                    text: "000000.0 mi"
                    pos: (1180,80)
                    font_size: '20dp'


            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/volts-flip.png"
                            size: (300,300)
                            pos: (1300,330)
                Widget:
                    id: voltsPointer
                    origin: (1450, 480)
                    angle: 0
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: -300
                            origin: (1450, 480)
                    canvas.after:
                        PopMatrix
                    canvas:
                        Rectangle:
                            source: "images/pointer2-shad.png"
                            size: (300,300)
                            pos: (1300,330)

                #Widget:
                #    canvas:
                #        Rectangle:
                #            source: "images/oil.png"
                #            size: (300,300)
                #            pos: (1380,20)
                Widget:
                    id: oilPointer
                #    origin: (1530, 170)
                #    angle: 0
                #    canvas.before:
                #        PushMatrix
                #        Rotate:
                #            angle: -300
                #            origin: (1530, 170)
                #    canvas.after:
                #        PopMatrix
                #    canvas:
                #        Rectangle:
                #            source: "images/pointer2-shad.png"
                #            size: (300,300)
                #            pos: (1380,20)



            FloatLayout:
                Widget:
                    canvas:
                        Rectangle:
                            source: "images/t.png"
                            size: (200,580)
                            pos: (1680,0)

                Widget:
                    id: parking
                    opacity: 0.0
                    canvas:
                        Rectangle:
                            source: "images/car-brake-parking-red.png"
                            size: (48,48)
                            pos: (1820,500)

                Widget:
                    id: coolant
                    opacity: 0.0
                    canvas:
                        Rectangle:
                            source: "images/car-coolant-level-orange.png"
                            size: (48,48)
                            pos: (1820,400)

                Label:
                    id: lowOil
                    opacity: 0.0
                    text: " LOW\n  OIL"
                    bold: True
                    pos: (1830,270)
                    font_size: '25dp'
                    color: 1,153/255,0,1

